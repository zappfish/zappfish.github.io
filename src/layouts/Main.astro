---
import Header from "./Header.astro"
import Footer from "./Footer.astro"
const { frontmatter } = Astro.props;
import "../styles/global.css"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
        <title>Zebrafish Toxicology Phenotype Atlas Project - {frontmatter.title}</title>
	</head>
	<body>
        <div id="main">
            <Header title={frontmatter.title} />
            <main>
                <slot />
            </main>
            <Footer />
        </div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

    main {
        height: 100%;
        margin: auto;
        max-width: 1280px;
        padding: 2rem 60px;
    }

    #main {
        min-height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
        align-items: stretch;
    }
</style>
