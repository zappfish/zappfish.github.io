---
import Header from "./Header.astro"
const { frontmatter } = Astro.props;
import "../styles/global.css"
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
        <title>Zebrafish Toxicology Phenotype Atlas Project - {frontmatter.title}</title>
	</head>
	<body>
        <Header title={frontmatter.title} />
        <main>
		<slot />
        </main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

    main {
        margin: auto;
        max-width: 1280px;
    }
</style>
