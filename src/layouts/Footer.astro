---
const sections = [
    { label: "Get involved", path: "/get-involved/" },
    { label: "Upcoming workshops", path: "/events/" },
    { label: "Contact us", path: "mailto:info@zappfish.org" },
]
const currentPath = Astro.url.pathname
---

<footer>
    {currentPath == "/" ? null : (
        <ul>
        {sections.map(({ label, path }) =>
        <li>
            <a href={path}>{label}</a>
        </li>
        )}
        </ul>
    )}
</footer>

<style>
    ul {
        padding: 3rem 0;
        list-style-type: none;
        display: flex;
        justify-content: center;
        gap: 3rem;
    }

    ul li a {
        display: inline-block;
        padding: .5rem 6rem;
        color: white;
        background-color: #1c4f5d;
        text-decoration: none;
    }
    ul li a:hover {
        opacity: .8;
    }
</style>
